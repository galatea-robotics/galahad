<Page
    x:Class="Galahad.PinPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Galahad"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="redButton" Content="On/Off" HorizontalAlignment="Left" Margin="88,65,0,0" VerticalAlignment="Top" Height="84" Width="121" Background="#33FF0000" Click="redButton_Click"/>
        <Button x:Name="greenButton" Content="Blink" HorizontalAlignment="Left" Margin="425,65,0,0" VerticalAlignment="Top" Height="84" Width="121" Background="#3300FF00" Click="greenButton_Click"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Height="84" Margin="88,206,0,0" VerticalAlignment="Top" Width="121" Background="#33000000" Click="startButton_Click"/>
        <Button x:Name="stopButton" Content="Stop" HorizontalAlignment="Left" Height="84" Margin="267,206,0,0" VerticalAlignment="Top" Width="121" Background="#33000000" IsEnabled="False" Click="stopButton_Click"/>

    </Grid>
</Page>
